      .clue
        %p M
      .clue
        %p N
      .clue
        %p O
      .clue
        %p P
    .row
      .lives
        .life
      .timer
        .elapsed

  .clues.animate-show{"ng-show" => "showConnection()"}
    .row.row-2.solved.connections
      .clue
        %p E
      .clue
        %p F
      .clue
        %p G
      .clue
        %p H
    .row.animate-show{"ng-show" => "showAnswer()"}
      .answer
        %p This is the answer
