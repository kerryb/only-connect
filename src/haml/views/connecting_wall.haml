      .lives
        .life
        .life
        .life
      .timer
        .elapsed

  .clues.animate-show{"ng-show" => "showAnswers()"}
    .row.row-1.solved
      .clue
        %p A
      .clue
        %p B
      .clue
        %p C
      .clue
        %p D
    .row.row-2.solved
      .clue
        %p E
      .clue
